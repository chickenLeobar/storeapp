{
  "name": "@storeapp/root",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*",
    "nimo"
  ],
  "scripts": {
    "postinstall": "preconstruct dev && manypkg check",
    "build": "preconstruct build",
    "fixpre": "preconstruct fix ",
    "commit": "cz",
    "dev:nimo": "concurrently \"yarn manypkg run nimo serve:shared\" \"yarn manypkg run nimo start\""
  },
  "dependencies": {
    "@babel/core": "^7.14.3",
    "@babel/node": "^7.14.2",
    "@babel/plugin-transform-runtime": "^7.14.3",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@changesets/cli": "^2.16.0",
    "@manypkg/cli": "^0.18.0",
    "@preconstruct/cli": "^2.1.0",
    "concurrently": "^6.2.0",
    "install": "^0.13.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  }
}
